<resources>

    <!-- This is a MaterialDesignTheme. Required when using Material Components -->

        <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/secondaryColor</item>
        <item name="colorPrimaryDark">#001a33</item>
        <item name="colorAccent">@color/red</item>
        <item name="actionMenuTextColor">#fff</item>
        <item name="backgroundColor">#fcfcfc</item>
        <item name="cardBackgroundColor">#ffffff</item>
        <item name="textColor">@color/colorOffWhite</item>
        <item name="tintColor">@color/red</item>
        <item name="iconTint">@color/red</item>
        <item name="backgroundTint"> #3b444b</item>

        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>


    <style name="DarkTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">#001a33</item>
        <item name="colorPrimaryDark">#1C1C1C</item>
        <item name="colorAccent">@color/red</item>
        <item name="backgroundColor">#000000</item>
        <item name="cardBackgroundColor">#424242</item>
        <item name="textColor">#ffffff</item>
        <item name="tintColor">#ffffff</item>
        <item name="iconTint">#BABABA</item>
        <item name="rippleColor">#7FE1AB</item>
        <item name="buttonColor">@color/primaryColor</item>

        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>



</resources>