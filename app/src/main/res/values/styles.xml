<resources>

    <!-- This is a MaterialDesignTheme. Required when using Material Components -->

        <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/secondaryDarkColor</item>
        <item name="colorPrimaryDark">@color/secondaryDarkColor</item>
        <item name="colorAccent">@color/red</item>
        <item name="backgroundColor">#191919</item>
        <item name="cardBackgroundColor">#424242</item>
        <item name="textColor">#ffffff</item>
        <item name="tintColor">#ffffff</item>

        <item name="buttonColor">@color/red</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>

    </style>
    <!-- Night Mode. -->
    <style name="DarkTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">#001a33</item>
        <item name="colorPrimaryDark">#1C1C1C</item>
        <item name="colorAccent">@color/red</item>
        <item name="backgroundColor">#191919</item>
        <item name="cardBackgroundColor">#424242</item>
        <item name="textColor">#ffffff</item>
        <item name="tintColor">#ffffff</item>
        <item name="iconTint">#BABABA</item>
        <item name="rippleColor">#7FE1AB</item>
        <item name="buttonColor">@color/red</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>
    <!-- transition between themes -->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/bounce_interpolator</item>
        <item name="android:windowExitAnimation">@android:anim/cycle_interpolator</item>
    </style>
    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

